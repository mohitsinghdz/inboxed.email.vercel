---

<section class="relative min-h-screen flex flex-col justify-between pt-24 pb-16 overflow-hidden bg-background">
  <!-- Background Pattern - Horizontal Lines -->
  <div
    class="absolute inset-0 opacity-[0.03] pointer-events-none"
    style="background-image: repeating-linear-gradient(0deg, transparent, transparent 1px, #000 1px, #000 2px); background-size: 100% 4px;"
  ></div>

  <!-- Hero Content -->
  <div class="container-custom relative z-10 flex-1 flex flex-col justify-center">
    <div class="flex flex-col gap-8">
      <!-- Overline Label -->
      <div class="font-mono text-xs text-mutedForeground uppercase tracking-[0.3em] animate-[fadeInUp_0.6s_ease-out_both]">
        Private AI Email Client
      </div>

      <!-- Headline -->
      <h1 class="font-serif leading-[0.88] text-6xl md:text-8xl lg:text-9xl uppercase tracking-tight animate-[fadeInUp_0.6s_ease-out_0.1s_both]">
        Your Inbox.
        <br />
        <span class="italic font-normal">Private AI.</span>
        <br />
        On-Device.
      </h1>

      <!-- Thick Rule -->
      <div class="w-full h-[3px] bg-black my-2 animate-[fadeInUp_0.6s_ease-out_0.2s_both]"></div>

      <!-- Description + CTAs -->
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-10 lg:gap-16 items-start animate-[fadeInUp_0.6s_ease-out_0.3s_both]">
        <div class="lg:col-span-5">
          <p class="font-body text-lg md:text-xl leading-relaxed text-foreground/85">
            Inboxed is the first <strong>private email client</strong> powered by a{' '}
            <strong class="border-b-2 border-black">Local Private LLM</strong>.
            Achieve zero inbox with on-device AI summarizationâ€”all without your data ever leaving your device.
          </p>
        </div>

        <div class="lg:col-span-7 flex flex-col items-start gap-6">
          <div class="flex flex-wrap gap-4">
            <button class="btn-primary">
              Download for Mac
            </button>
          </div>
          <div class="font-mono text-xs text-mutedForeground uppercase tracking-widest">
            Powered by Apple MLX &bull; llama.cpp
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- App Screenshot Mockup -->
  <div class="container-custom relative z-10 mt-16 md:mt-20 animate-[fadeInUp_0.8s_ease-out_0.5s_both]">
    <div class="relative mx-auto max-w-5xl">
      <!-- Shadow layer -->
      <div class="absolute inset-0 translate-y-4 bg-black/10 blur-2xl"></div>

      <!-- Window frame -->
      <div class="relative border-2 border-black bg-background">
        <!-- Title bar -->
        <div class="flex items-center gap-2 px-4 py-3 border-b-2 border-black bg-muted">
          <span class="w-3 h-3 border-2 border-black bg-foreground"></span>
          <span class="w-3 h-3 border-2 border-black bg-foreground"></span>
          <span class="w-3 h-3 border-2 border-black bg-foreground"></span>
          <span class="ml-4 font-mono text-[11px] text-mutedForeground uppercase tracking-widest select-none">
            MailBox -- Smart Inbox
          </span>
        </div>

        <!-- Window content -->
        <div class="relative flex items-center justify-center bg-muted/50 aspect-[16/9] overflow-hidden">
          <!-- Grid pattern inside window -->
          <div
            class="absolute inset-0 opacity-[0.04] pointer-events-none"
            style="background-image: linear-gradient(#000 1px, transparent 1px), linear-gradient(90deg, #000 1px, transparent 1px); background-size: 40px 40px;"
          ></div>

          <!-- Placeholder content -->
          <div class="relative flex flex-col items-center gap-6 p-8">
            <div class="flex flex-col gap-3 w-full max-w-md">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-black/10 shrink-0"></div>
                <div class="h-3 bg-black/10 flex-1"></div>
                <div class="h-3 bg-black/10 w-16"></div>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-black/15 shrink-0"></div>
                <div class="h-3 bg-black/15 flex-1"></div>
                <div class="h-3 bg-black/15 w-12"></div>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-black/10 shrink-0"></div>
                <div class="h-3 bg-black/10 flex-1"></div>
                <div class="h-3 bg-black/10 w-20"></div>
              </div>
            </div>

            <div class="font-mono text-sm md:text-base text-mutedForeground uppercase tracking-[0.25em] select-none">
              App Screenshot
            </div>

            <div class="flex flex-col gap-3 w-full max-w-md">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-black/10 shrink-0"></div>
                <div class="h-3 bg-black/10 flex-1"></div>
                <div class="h-3 bg-black/10 w-14"></div>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-black/10 shrink-0"></div>
                <div class="h-3 bg-black/10 flex-1"></div>
                <div class="h-3 bg-black/10 w-10"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
      <line x1="12" y1="5" x2="12" y2="19"></line>
      <polyline points="19 12 12 19 5 12"></polyline>
    </svg>
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(24px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
